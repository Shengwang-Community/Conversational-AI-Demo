<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Background -->
    <solid android:color="@color/ai_icontext1" />
    
    <!-- Border with brand color when focused -->
    <stroke
        android:width="1.5dp"
        android:color="@color/ai_brand_main6" />
    
    <!-- Corner radius -->
    <corners android:radius="8dp" />
    
    <!-- Padding for text -->
    <padding
        android:left="12dp"
        android:right="12dp"
        android:top="8dp"
        android:bottom="8dp" />
</shape> 
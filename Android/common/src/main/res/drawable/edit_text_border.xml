<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Background -->
    <solid android:color="@color/ai_icontext1" />
    
    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="@color/ai_icontext3" />
    
    <!-- Corner radius -->
    <corners android:radius="8dp" />
    
    <!-- Padding for text -->
    <padding
        android:left="12dp"
        android:right="12dp"
        android:top="8dp"
        android:bottom="8dp" />
</shape> 
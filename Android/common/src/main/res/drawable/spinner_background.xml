<!-- res/drawable/spinner_background_with_arrow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1D1D1D"/>
            <corners android:radius="8dp"/>
            <stroke
                android:width="1dp"
                android:color="#1DFFFFFF"/>
        </shape>
    </item>
    <item
        android:right="20dp"
        android:width="10dp"
        android:height="5dp"
        android:drawable="@drawable/expand_more"
        android:gravity="center|right">
    </item>
</layer-list>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed states -->
    <item android:drawable="@drawable/setting_switcher_blue_on" android:state_pressed="true" android:state_checked="true" android:state_enabled="true"/>
    <item android:drawable="@drawable/setting_switcher_off" android:state_pressed="true" android:state_checked="false" android:state_enabled="true"/>

    <!-- Normal enabled states -->
    <item android:drawable="@drawable/setting_switcher_blue_on" android:state_checked="true"
        android:state_enabled="true" />
    <item android:drawable="@drawable/setting_switcher_off" android:state_checked="false" android:state_enabled="true" />
    
    <!-- Disabled states -->
    <item android:drawable="@drawable/setting_switcher_on_disable" android:state_checked="true" android:state_enabled="false" />
    <item android:drawable="@drawable/setting_switcher_off_disable" android:state_checked="false" android:state_enabled="false" />
    
    <!-- Default state (fallback) -->
    <item android:drawable="@drawable/setting_switcher_off" />
</selector>
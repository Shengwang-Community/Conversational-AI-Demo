<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 基本蓝牙权限 -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <!-- Android 12 (API 31)及以上需要的蓝牙权限 -->
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" android:usesPermissionFlags="neverForLocation" tools:targetApi="s" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />

    <!-- 位置权限（BLE扫描需要） -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- 声明应用使用BLE功能 -->
    <uses-feature android:name="android.hardware.bluetooth_le" android:required="true" />

    <application>
    <activity
        android:name="io.agora.scene.convoai.ui.CovLivingActivity"
        android:keepScreenOn="true"
        android:configChanges="locale|layoutDirection"
        android:screenOrientation="portrait"
        android:launchMode="singleTask"
        android:exported="false" />

    <activity
        android:name="io.agora.scene.convoai.iot.ui.CovIotDeviceListActivity"
        android:keepScreenOn="true"
        android:configChanges="locale|layoutDirection"
        android:screenOrientation="portrait"
        android:launchMode="singleTask"
        android:exported="false" />

    <activity
        android:name="io.agora.scene.convoai.iot.ui.CovIotDeviceSetupActivity"
        android:keepScreenOn="true"
        android:configChanges="locale|layoutDirection"
        android:screenOrientation="portrait"
        android:launchMode="singleTask"
        android:exported="false" />

    <activity
        android:name="io.agora.scene.convoai.iot.ui.CovDeviceScanActivity"
        android:keepScreenOn="true"
        android:configChanges="locale|layoutDirection"
        android:screenOrientation="portrait"
        android:launchMode="singleTask"
        android:exported="false" />

    <activity
        android:name="io.agora.scene.convoai.iot.ui.CovDeviceConnectActivity"
        android:keepScreenOn="true"
        android:configChanges="locale|layoutDirection"
        android:screenOrientation="portrait"
        android:launchMode="singleTask"
        android:exported="false" />

    <activity
        android:name="io.agora.scene.convoai.iot.ui.CovWifiSelectActivity"
        android:keepScreenOn="true"
        android:configChanges="locale|layoutDirection"
        android:screenOrientation="portrait"
        android:launchMode="singleTask"
        android:exported="false" />
    </application>
</manifest>

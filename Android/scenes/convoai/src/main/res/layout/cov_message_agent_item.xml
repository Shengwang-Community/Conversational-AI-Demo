<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="12dp"
    tools:background="@color/ai_fill1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_message_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="6dp"
            android:scaleType="centerCrop"
            android:src="@drawable/common_default_agent"
            app:shapeAppearance="@style/CommonRoundShape"/>

        <TextView
            android:id="@+id/tv_message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ai_icontext1"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        android:gravity="start|center_vertical">

        <io.agora.scene.convoai.ui.living.messages.TypingTextView
            android:id="@+id/tv_message_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="999"
            android:textColor="@color/ai_icontext1"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Add image message layout below text message layout -->
    <!-- Image message item for agent (hidden by default, shown for image messages) -->
    <LinearLayout
        android:id="@+id/layout_image_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        tools:visibility="visible">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_image_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:adjustViewBounds="true"
            android:background="@drawable/agent_bg_interrupt"
            android:minWidth="120dp"
            android:minHeight="120dp"
            android:scaleType="centerCrop"
            app:shapeAppearance="@style/CommonCustomShape" />

        <!-- ProgressBar for uploading -->
        <ProgressBar
            android:id="@+id/progress_upload"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:visibility="gone"
            tools:visibility="visible" />

        <!-- Error icon for upload failed -->
        <ImageView
            android:id="@+id/iv_upload_error"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/scene_details_upload_error"
            android:visibility="gone"
            tools:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_message_interrupt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/agent_bg_interrupt"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="3dp"
        android:paddingStart="3dp"
        android:paddingEnd="6dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ai_icon_interrupt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/cov_interrupted"
            android:textColor="@color/ai_icontext1"
            android:textSize="14sp" />
    </LinearLayout>


</LinearLayout>

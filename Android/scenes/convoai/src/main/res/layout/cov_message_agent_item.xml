<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/ai_fill1"
    android:paddingVertical="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_message_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:src="@drawable/scene_detail_message_list_agent" />

        <TextView
            android:id="@+id/tv_message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ai_icontext1"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_message_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:textSize="16sp"
        android:maxLines="999"
        android:textColor="@color/ai_icontext1" />

    <!-- Add image message layout below text message layout -->
    <!-- Image message item for agent (hidden by default, shown for image messages) -->
    <FrameLayout
        android:id="@+id/layout_image_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        tools:visibility="visible"
        android:layout_marginStart="20dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_image_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="120dp"
            android:minHeight="120dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="@drawable/agent_bg_interrupt" />

        <!-- ProgressBar for uploading -->
        <ProgressBar
            android:id="@+id/progress_upload"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- Error icon for upload failed -->
        <ImageView
            android:id="@+id/iv_upload_error"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/scene_details_upload_error"
            android:visibility="gone" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/layout_message_interrupt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:paddingStart="3dp"
        android:paddingEnd="6dp"
        android:paddingVertical="3dp"
        android:visibility="gone"
        android:background="@drawable/agent_bg_interrupt"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ai_icon_interrupt"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/cov_interrupted"
            android:textColor="@color/ai_icontext1"
            android:textSize="14sp" />
    </LinearLayout>


</LinearLayout>

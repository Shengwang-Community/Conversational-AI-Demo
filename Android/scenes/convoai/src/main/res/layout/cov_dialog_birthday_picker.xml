<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/bottom_dialog_bg2"
    android:orientation="vertical">

    <!-- Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:paddingVertical="24dp"
        android:text="@string/cov_mine_select_your_birthday"
        android:textColor="@color/ai_icontext1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_dateTimePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_title">

        <View
            android:id="@+id/view_select"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/cov_picker_select_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- DateTimePicker -->
        <com.loper7.date_time_picker.DateTimePicker
            android:id="@+id/dateTimePicker"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:dt_dividerColor="@android:color/transparent"
            app:dt_layout="@layout/cov_date_picker_custom_layout"
            app:dt_normalTextSize="20sp"
            app:dt_selectTextSize="20sp"
            app:dt_selectedTextBold="true"
            app:dt_showLabel="true"
            app:dt_textBold="true"
            app:dt_textColor="@color/ai_icontext2"
            app:dt_themeColor="@color/ai_icontext1" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_dateTimePicker">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/ai_dp_default"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/common_cancel"
            android:textAllCaps="false"
            android:textColor="@color/ai_icontext2"
            android:textSize="14sp"
            app:backgroundTint="@color/ai_line2"
            app:cornerRadius="12dp"
            app:rippleColor="#1A000000" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirm"
            android:layout_width="0dp"
            android:layout_height="@dimen/ai_dp_default"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:text="@string/common_confirm"
            android:textAllCaps="false"
            android:textColor="@color/ai_brand_white10"
            android:textSize="15sp"
            app:backgroundTint="@color/ai_brand_main6"
            app:cornerRadius="12dp"
            app:rippleColor="#1AFFFFFF" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
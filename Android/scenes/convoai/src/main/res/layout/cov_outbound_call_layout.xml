<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@android:color/transparent"
    tools:background="@color/ai_fill4">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_not_join"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/llInputContainer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/cov_sip_call_input_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/btnJoinCall">

            <LinearLayout
                android:id="@+id/llRegionCode"
                android:layout_width="100dp"
                android:layout_height="44dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/cov_sip_call_input_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="12dp"
                app:layout_constraintBottom_toTopOf="@+id/btnJoinCall">

                <TextView
                    android:id="@+id/tv_region_flag"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:textSize="16sp"
                    tools:text="ðŸ‡®ðŸ‡³" />

                <TextView
                    android:id="@+id/tv_region_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:textColor="@color/ai_icontext1"
                    android:textSize="14sp"
                    tools:text="+91" />

                <ImageView
                    android:id="@+id/iv_region_select"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/common_list_arrow_down" />
            </LinearLayout>


            <EditText
                android:id="@+id/et_phone_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:digits="0123456789"
                android:hint="@string/cov_sip_outbound_call_hint"
                android:inputType="number"
                android:maxLength="12"
                android:textColor="@color/ai_icontext2"
                android:textColorHint="@color/ai_icontext3"
                android:textCursorDrawable="@drawable/custom_agent_cursor"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_clear_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:visibility="gone"
                android:src="@drawable/common_ic_clear" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnJoinCall"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/cov_selector_gradient_button_r99"
            android:paddingHorizontal="20dp"
            android:src="@drawable/cov_detail_join_call"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/layout_tips"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/layout_tips"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.84">

            <ImageButton
                android:id="@+id/btn_tips"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/common_ic_notice"
                app:layout_constraintBottom_toBottomOf="@id/tv_ai_vad_high"
                app:layout_constraintStart_toEndOf="@+id/tv_ai_vad_high"
                app:layout_constraintTop_toTopOf="@id/tv_ai_vad_high" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text="@string/cov_sip_outbound_call_tips"
                android:textColor="@color/ai_icontext2"
                android:textSize="12sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_joined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/layout_calling_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/tv_calling"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/cov_detail_join_call"
                app:layout_constraintBottom_toBottomOf="@id/tv_ai_vad_high"
                app:layout_constraintStart_toEndOf="@+id/tv_ai_vad_high"
                app:layout_constraintTop_toTopOf="@id/tv_ai_vad_high" />

            <TextView
                android:id="@+id/tv_calling_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="@color/ai_icontext2"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="+91-22-47790159" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_calling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:text="@string/cov_sip_outbound_calling"
            android:textColor="@color/ai_icontext2"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/cv_end_call"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_end_call"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="@android:color/transparent"
            app:cardCornerRadius="36dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageButton
                android:id="@+id/btn_end_call"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/btn_bg_block1_selector"
                android:src="@drawable/scene_detail_close"
                app:tint="@color/ai_red6" />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingVertical="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|end">

        <ImageView
            android:id="@+id/iv_message_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:src="@drawable/scene_detail_message_list_user" />

        <TextView
            android:id="@+id/tv_message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ai_icontext1"
            android:text="@string/common_detail_message_list_you"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_message_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_gravity="end"
        android:textSize="16sp"
        android:textColor="@color/ai_icontext1"
        android:background="@drawable/message_mine_item_border"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        tools:text="Content" />

    <!-- Add image message layout below text message layout -->
    <!-- Image message item for user (hidden by default, shown for image messages) -->
    <FrameLayout
        android:id="@+id/layout_image_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"
        tools:visibility="visible"
        android:layout_marginEnd="20dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_image_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="120dp"
            android:minHeight="120dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="@drawable/message_mine_item_border" />

        <!-- ProgressBar for uploading -->
        <ProgressBar
            android:id="@+id/progress_upload"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- Error icon for upload failed -->
        <ImageView
            android:id="@+id/iv_upload_error"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/scene_details_upload_error"
            android:visibility="gone" />
    </FrameLayout>
</LinearLayout>

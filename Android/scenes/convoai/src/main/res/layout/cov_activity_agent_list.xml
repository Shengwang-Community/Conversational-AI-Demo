<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ai_fill7"
    android:paddingTop="25dp">

    <!-- Fixed info button that doesn't scroll -->
    <ImageButton
        android:id="@+id/btn_info"
        android:layout_width="44dp"
        android:layout_height="42dp"
        android:layout_marginStart="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/app_living_info"
        app:tint="@color/ai_icontext1"
        android:elevation="10dp" />

    <!-- AppBarLayout for handling scroll behavior -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <!-- Header container with title only -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/headerContainer"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:paddingHorizontal="16dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <LinearLayout
                android:id="@+id/ll_top_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/ivTop"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/scene_detail_convo_ai_logo" />

                <TextView
                    android:id="@+id/tvTopTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cov_detail_agent_title"
                    android:textColor="@color/ai_icontext1"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- TabLayout container - will be sticky when collapsed -->
        <FrameLayout
            android:id="@+id/tabContainer"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/cov_tab_agent_list_container_bg"
            android:padding="2dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:layout_collapseMode="pin">

            <!-- Sliding indicator -->
            <View
                android:id="@+id/vTabIndicator"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/cov_tab_agent_list_bg_selected"
                android:visibility="invisible"
                tools:visibility="visible"/>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                app:tabGravity="fill"
                app:tabIndicator="@android:color/transparent"
                app:tabMode="fixed"
                app:tabRippleColor="@android:color/transparent" />

        </FrameLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Content area with ViewPager2 -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <!-- Loading indicator -->
    <ProgressBar
        android:id="@+id/pbLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible"
        android:indeterminateTint="@color/ai_brand_main6" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
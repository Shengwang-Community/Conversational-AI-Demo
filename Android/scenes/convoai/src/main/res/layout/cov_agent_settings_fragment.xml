<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ai_fill2"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp">

            <LinearLayout
                android:id="@+id/ll_agent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/settings_item_bg"
                android:orientation="vertical"
                android:paddingVertical="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_language"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ai_dp_default"
                    android:paddingHorizontal="16dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cov_setting_language"
                        android:textColor="@color/ai_icontext1"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iv_language_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_dropleft"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/ai_icontext2" />

                    <TextView
                        android:id="@+id/tv_language_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/ai_icontext1"
                        android:textDirection="ltr"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/iv_language_arrow"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="xxxx" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_avatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/settings_item_bg"
                android:orientation="vertical"
                android:paddingVertical="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_agent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ai_dp_default"
                    android:paddingHorizontal="16dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_avatar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="@string/cov_setting_avatar"
                        android:textColor="@color/ai_icontext1"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iv_avatar_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_dropleft"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/ai_icontext2" />

                    <TextView
                        android:id="@+id/tv_avatar_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:maxLines="1"
                        android:text="@string/common_close"
                        android:textColor="@color/ai_icontext1"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/iv_avatar_arrow"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_max="120dp"
                        tools:text="xxx" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_avatar"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="14dp"
                        android:background="@color/ai_brand_white10"
                        android:scaleType="centerCrop"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tv_avatar_detail"
                        app:layout_constraintTop_toTopOf="parent"
                        app:shapeAppearance="@style/CommonCustomShape" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:text="@string/cov_setting_advanced_settings"
                android:textColor="@color/ai_icontext4"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_avatar" />

            <LinearLayout
                android:id="@+id/ll_device"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/settings_item_bg"
                android:orientation="vertical"
                android:paddingVertical="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_device">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_ai_vad"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ai_dp_default"
                    android:paddingHorizontal="16dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_ai_vad_high"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cov_setting_ai_vad_high"
                        android:textColor="@color/ai_icontext1"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/btn_ai_vad"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/common_ic_notice"
                        app:layout_constraintBottom_toBottomOf="@id/tv_ai_vad_high"
                        app:layout_constraintStart_toEndOf="@+id/tv_ai_vad_high"
                        app:layout_constraintTop_toTopOf="@id/tv_ai_vad_high" />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cb_ai_vad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/common_cb_blue_selector"
                        android:checked="true"
                        app:buttonTint="@null"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="16dp"
                    android:background="@color/ai_line1" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_render_mode"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ai_dp_default"
                    android:paddingHorizontal="16dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_render"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cov_transcript_render_mode"
                        android:textColor="@color/ai_icontext1"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iv_render_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_dropleft"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/ai_icontext2" />

                    <TextView
                        android:id="@+id/tv_render_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/ai_icontext1"
                        android:textDirection="ltr"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/iv_render_arrow"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="xxxx" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="16dp"
                    android:background="@color/ai_line1" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_voiceprint_mode"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ai_dp_default"
                    android:paddingHorizontal="16dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_voiceprint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cov_voiceprint_recognition"
                        android:textColor="@color/ai_icontext1"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iv_voiceprint_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_dropleft"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/ai_icontext2" />

                    <TextView
                        android:id="@+id/tv_voiceprint_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cov_voiceprint_close"
                        android:textColor="@color/ai_icontext1"
                        android:textDirection="ltr"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/iv_voiceprint_arrow"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:id="@+id/v_options_mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            tools:visibility="gone">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_options"
                android:layout_width="218dp"
                android:layout_height="150dp"
                android:backgroundTint="@color/ai_block3"
                app:cardCornerRadius="12dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rc_options"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </androidx.cardview.widget.CardView>
        </FrameLayout>
    </FrameLayout>
</androidx.core.widget.NestedScrollView>

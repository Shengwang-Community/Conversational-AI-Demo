<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ai_fill7">

    <!-- Empty State Container -->
    <LinearLayout
        android:id="@+id/llEmptyState"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_agent_empty_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/llBottomAction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Empty State Image -->
        <ImageView
            android:id="@+id/ivEmptyState"
            android:layout_width="188dp"
            android:layout_height="91dp"
            android:layout_marginBottom="24dp"
            android:scaleType="centerCrop"
            android:src="@drawable/app_icon" />

        <!-- Empty State Text -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/cov_custom_agent_acquire"
                android:textColor="@color/ai_icontext1"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/cov_custom_agent_acquire_tip"
                android:textColor="@color/ai_icontext4"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- List Container -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/llBottomAction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCustomAgents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingHorizontal="16dp"
            android:paddingTop="6dp"
            android:paddingBottom="16dp"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/cov_item_official_agent"
            tools:visibility="visible" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Bottom Action Container -->
    <LinearLayout
        android:id="@+id/llBottomAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cov_custom_agent_bottom_bg"
        android:orientation="vertical"
        android:paddingVertical="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Input Container -->
        <LinearLayout
            android:id="@+id/llInputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/custom_agent_input_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="9dp">

            <EditText
                android:id="@+id/et_agent_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:digits="0123456789"
                android:hint="@string/cov_custom_agent_input_tip"
                android:inputType="number"
                android:maxLength="8"
                android:textColor="@color/ai_icontext2"
                android:textColorHint="@color/ai_icontext3"
                android:textCursorDrawable="@drawable/custom_agent_cursor"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:text="8"
                android:textColor="@color/ai_icontext2"
                android:textSize="14sp"
                tools:text="8" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGetAgent"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/ai_dp_2small"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="@string/cov_custom_agent_get"
                android:textAllCaps="false"
                android:textColor="@color/ai_brand_white10"
                android:textSize="14sp"
                app:backgroundTint="@color/ai_brand_main6"
                app:cornerRadius="12dp"
                app:rippleColor="#1AFFFFFF"
                tools:text="@string/cov_custom_agent_get" />
        </LinearLayout>

        <View
            android:id="@+id/viewBottomSpace"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout> 